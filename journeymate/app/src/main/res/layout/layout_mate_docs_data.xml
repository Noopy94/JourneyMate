<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_mate_docs_list_data"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageButton
        android:id="@+id/docs_image"
        android:layout_width="113dp"
        android:layout_height="157dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/docs_list_style"
        android:padding="0dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/docs_list_title"
        android:layout_width="134dp"
        android:layout_height="38dp"
        android:layout_below="@+id/docs_image"
        android:layout_alignStart="@+id/docs_image"
        android:layout_alignEnd="@+id/docs_image"
        android:layout_marginStart="0dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="2dp"
        android:text="문서 제목"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/docs_list_created_Date"
        android:layout_width="138dp"
        android:layout_height="32dp"
        android:layout_below="@+id/docs_image"
        android:layout_alignStart="@+id/docs_image"
        android:layout_alignEnd="@+id/docs_image"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="-1dp"
        android:text="2022.01.06"
        android:textAlignment="center"
        android:textSize="21dp"
        android:textStyle="bold" />


</RelativeLayout>